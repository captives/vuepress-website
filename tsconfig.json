{
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "config-pwa.ts"
  ],
  "exclude": [
    "src/utils/3d-forest.js",
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "composite": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "sourceMap": true,
    "baseUrl": "./",
    "types": [
      "node",
      "vite/client",
      "pinia-plugin-persistedstate",
      // "vite-plugin-pwa/client",
      "vite-plugin-svg-icons/client"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"],
    },
  },
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}